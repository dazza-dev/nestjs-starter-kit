model User {
    id        Int       @id @default(autoincrement())
    name      String
    avatar    String?
    email     String
    username  String?   @unique
    password  String
    createdAt DateTime  @default(now()) @map("created_at")
    updatedAt DateTime  @updatedAt @map("updated_at")
    deletedAt DateTime? @map("deleted_at")

    userRoles UserRole[]

    @@unique([email, deletedAt])
    @@map("users")
}
